<%-layout('layouts/boilerplate')%>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
  </head>
  <body>
    <div class="row">
      <div class="col-6 offset-3">
        <h1 class="m-4">Login</h1>
        <form
          action="/login"
          method="POST"
          novalidate
          class="validated-form d-inline"
        >
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              type="text"
              id="username"
              name="username"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              required
            />
            <div class="valid-feedback">Looks good!</div>
          </div>

          <button class="btn btn-success">Login</button>
        </form>
        <form action="/forgotPassword ">
          <button class="btn btn-warning mt-2">forgot password</button>
        </form>
      </div>
    </div>
  </body>
</html>
